generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reservation {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @db.VarChar(255)
  customerName   String?
  childNames String  @db.VarChar(255)
  amount    Money    
  authorId  Int
}  
id: string;
  email: string;
  customerName: string;
  childNames: string;
  amount: number;
  status: 'pending' | 'paid'; 
  campTime: Array<Array<[string, string, string]>>;